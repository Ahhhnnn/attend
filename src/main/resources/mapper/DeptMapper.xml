<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.he.attend.dao.DeptMapper">

<update id="logicDelete" parameterType="integer">
    update ts_dept set dr=1 where dept_id=#{deptId}
</update>

    <update id="updateStatu" parameterType="integer">
        UPDATE ts_dept set statu=#{statu} where dept_id=#{deptId}
    </update>
</mapper>